<div class="row">
  <h1 class="col-md-12">Player Details</h1>
</div>

<div class="card mb-4 p-4">
  <div class="card-body">
    <table class="table table-borderless">
      <tbody>
        <tr>
          <td class="col-md-6 border-right">
            <p>
              <strong>First name:</strong>
              <%= @player.first_name %>
            </p>

            <p>
              <strong>Last name:</strong>
              <%= @player.last_name %>
            </p>

            <p>
              <strong>Date of birth:</strong>
              <%= @player.date_of_birth %>
            </p>

            <p>
              <strong>Playing position:</strong>
              <%= @player.playing_position %>
            </p>

            <p>
              <strong>Country:</strong>
              <%= @player.country %>
            </p>
          </td>
          <td class="col-md-6 border-left">
            <div class=" d-flex justify-content-end">
              <% if @player.image.attached? %>
                <%= image_tag @player.image.variant(resize: "250x250") %>
              <% else %>
                <%= image_pack_tag "media/images/avatar.png", size: "250x250" %>
              <% end %>
            </div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>

  <div class="card-footer d-flex justify-content-center">
    <%= link_to edit_player_path(@player), class: "btn btn-primary btn-sm mr-2" do %>
      <i class="mdi mdi-account-edit mr-2" aria-hidden="true"></i>
      Edit
    <% end %>
    <%= link_to players_path, class: "btn btn-secondary btn-sm ml-2" do %>
      <i class="mdi mdi-arrow-left mr-2" aria-hidden="true"></i>
      Back
    <% end %>
  </div>
</div>
