<div class="row">
  <h1 class="col-md-6">Players</h1>
  <div class="col-md-6 text-right">
    <%= link_to new_player_path, class: "btn btn-success my-2" do %>
      <i class="mdi mdi-plus mr-2" aria-hidden="true"></i>
      Create New Player
    <% end %>
  </div>
</div>

<div class="">
  <table class="table table-bg table-hover datatable">
    <thead>
      <tr>
        <th>#</th>
        <th>Image</th>
        <th>First name</th>
        <th>Last name</th>
        <th>Date of birth</th>
        <th>Playing position</th>
        <th>Country</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @players.each_with_index do |player, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td>
            <% if player.image.attached? %>
              <%= image_tag player.image.variant(resize: "50x50") %>
            <% else %>
              <%= image_pack_tag "media/images/avatar.png", size: "50x50" %>
            <% end %>
          </td>
          <td><%= player.first_name %></td>
          <td><%= player.last_name %></td>
          <td><%= player.date_of_birth %></td>
          <td><%= player.playing_position %></td>
          <td><%= player.country %></td>
          <td>
            <%= link_to player  do %>
              <i class="mdi mdi-eye mr-2" aria-hidden="true"></i>
            <% end %>
            <%= link_to edit_player_path(player) do %>
              <i class="mdi mdi-account-edit mr-2" aria-hidden="true"></i>
            <% end %>
            <%= link_to player, method: :delete, data: { confirm: 'Are you sure?' } do %>
              <i class="mdi mdi-delete mr-2" aria-hidden="true"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
