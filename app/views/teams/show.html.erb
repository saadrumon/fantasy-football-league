<div class="row">
  <h1 class="col-md-12">Team Details</h1>
</div>

<div class="card mb-4 p-4">
  <div class="card-body">
    <table class="table table-borderless">
      <tbody>
        <tr>
          <td class="col-md-6 border-right">
            <p>
              <strong>Name:</strong>
              <%= @team.name %>
            </p>

            <p>
              <strong>Players:</strong>
              <% if @team.players.length.eql? 0 %>
                <p class="text-danger">Currently there is no player in this team. 
                Players can be added when new season starts.</p>
              <% else %>
                <% @team.players.each do |player| %>
                  <%= link_to player_path(player) do %>
                    <p><%= "#{player.first_name} #{player.last_name}" %></p>  
                  <% end %>
                <% end %>
              <% end %>
            </p>
          </td>
          <td class="col-md-6 border-left">
            <div class=" d-flex justify-content-end">
              <% if @team.logo.attached? %>
                <%= image_tag @team.logo.variant(resize: "250x250") %>
              <% else %>
                <%= image_pack_tag "media/images/team_logo.jpg", size: "250x250" %>
              <% end %>
            </div>
          </td>
        </tr>
        <tr>
          <td colspan="2" class="border-top">
              <p class="h4">Description</p>
              <p><%= @team.description %></p>
          </td>
        </tr>
      </tbody>
    </table>
  </div>

  <div class="card-footer d-flex justify-content-center">
    <%= link_to edit_team_path(@team), class: "btn btn-primary btn-sm mr-2" do %>
      <i class="mdi mdi-account-edit mr-2" aria-hidden="true"></i>
      Edit
    <% end %>
    <%= link_to teams_path, class: "btn btn-secondary btn-sm ml-2" do %>
      <i class="mdi mdi-arrow-left mr-2" aria-hidden="true"></i>
      Back
    <% end %>
  </div>
</div>
