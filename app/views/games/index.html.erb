<div class="row">
  <h1 class="col-md-6">Games</h1>
  <div class="col-md-6 text-right">
    <% unless @season.ended? %>
      <%= link_to new_season_game_path, class: "btn btn-success my-2" do %>
        <i class="mdi mdi-plus mr-2" aria-hidden="true"></i>
        Add New Game
      <% end %>
    <% end %>
  </div>
</div>

<table class="table table-bg table-hover datatable">
  <thead>
    <tr>
      <th>#</th>
      <th>Team 1</th>
      <th>Team 2</th>
      <th>Team 1 Goal (Home)</th>
      <th>Team 2 Goal (Away)</th>
      <th>Team 1 Goal (Away)</th>
      <th>Team 2 Goal (Home)</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @games.each_with_index do |game, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= game.team_1.name %></td>
        <td><%= game.team_2.name %></td>
        <td><%= game.home_game_goal_team_1 %></td>
        <td><%= game.away_game_goal_team_2 %></td>
        <td><%= game.away_game_goal_team_1 %></td>
        <td><%= game.home_game_goal_team_2 %></td>
        <td>
          <%= link_to edit_season_game_path(@season, game), title: 'Edit', 'data-toggle': 'tooltip', 'data-placement': 'right' do %>
            <i class="mdi mdi-account-edit mr-2" aria-hidden="true"></i>
          <% end %>
          <% if @season.running? %>
            <%= link_to season_game_path(@season, game), title: 'Delete', 'data-toggle': 'tooltip', 'data-placement': 'right', method: :delete, data: { confirm: 'Are you sure?' } do %>
              <i class="mdi mdi-delete mr-2" aria-hidden="true"></i>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
